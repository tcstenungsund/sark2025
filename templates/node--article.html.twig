{# node--article.html.twig #}

<article class="node-article">
  <header class="node-header">
    <h2>{{ label }}</h2>
    <div class="node-meta">
      {# Visa författare och publiceringsdatum om de finns #}
      {% if node.author %}
        <p class="node-author">
          <strong>Författare:</strong> {{ node.author }}
        </p>
      {% endif %}
      <p class="node-date">
        <strong>Publicerad:</strong> {{ node.created|date('d M Y') }}
      </p>
    </div>
  </header>

  <div class="node-body">
    {# Visa artikelns huvudtext #}
    {{ content.body }}

    {# Om det finns en "Läs mer"-länk (från ett anpassat fält), visa den #}
    {% if content.field_more_link %}
      <a href="{{ content.field_more_link }}" class="read-more-link">
        Läs mer <span class="icon">&#8595;</span>
      </a>
    {% endif %}
  </div>

  <footer class="node-footer">
    {# Länk för att skriva kommentar #}
    <a href="{{ url('node.comment', { 'node': node.id() }) }}" class="comment-link">
      <span class="icon">&#128172;</span> Skriv kommentar
    </a>
  </footer>

</article>
